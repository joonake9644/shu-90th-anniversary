rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ============ 이미지 업로드 (공개) ============
    match /uploads/{fileName} {
      // 누구나 읽기 가능
      allow read: if true;

      // 인증된 사용자 또는 누구나 업로드 가능 (개발 중)
      allow write: if request.resource.size < 50 * 1024 * 1024 // 50MB 제한
                   && request.resource.contentType.matches('image/.*|video/.*');
    }

    // ============ Period 이미지 ============
    match /periods/{fileName} {
      allow read: if true;
      allow write: if request.resource.size < 50 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*|video/.*');
    }

    // ============ Highlight 이미지 ============
    match /highlights/{fileName} {
      allow read: if true;
      allow write: if request.resource.size < 50 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // ============ 뉴스 이미지 ============
    match /news/{fileName} {
      allow read: if true;
      allow write: if request.resource.size < 50 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // ============ 이벤트 이미지 ============
    match /events/{fileName} {
      allow read: if true;
      allow write: if request.resource.size < 50 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // ============ 비디오 파일 ============
    match /videos/{fileName} {
      allow read: if true;
      allow write: if request.resource.size < 500 * 1024 * 1024 // 500MB 제한
                   && request.resource.contentType.matches('video/.*');
    }

    // ============ 히스토리 이미지 ============
    match /history/{fileName} {
      allow read: if true;
      allow write: if request.resource.size < 50 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // ============ 테스트 폴더 (개발용) ============
    match /test/{allPaths=**} {
      allow read: if true;
      allow write: if true;  // 개발/테스트 목적으로 모두 허용
    }

    // ============ 기본 규칙: 나머지는 읽기만 허용 ============
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false; // TODO: 관리자 인증 추가
    }
  }
}
